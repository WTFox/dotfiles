[github]
	user = wtfox

[core]
	excludesfile = ~/.config/git/ignore
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = nvim

[include]
    path = ~/.gitaliases

[diff]
	tool = diff-so-fancy

[init]
	defaultBranch = main

[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential

[includeIf "gitdir:/Users"]
    path = ~/.gitconfig-macos
