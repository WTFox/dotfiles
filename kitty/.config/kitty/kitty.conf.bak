
# ----- K I T T Y   C O N F I G ----- #
# ----------------------------------- #

shell_integration no-cursor

# --- macos settings
macos_thicken_font 1
macos_option_as_alt yes

# ----- window settings ----- #

# remember_window_size      yes
# initial_window_width      640
# initial_window_height     400

# window_padding_width        12 24 0 24
placement_strategy          center
resize_in_steps             yes
hide_window_decorations     titlebar-only
background_opacity          0.98
inactive_text_alpha         1.0
enabled_layouts             splits, stack


# ----- scrollback behaviour ----- #

scrollback_lines            1000
wheel_scroll_multiplier     5.0
touch_scroll_multiplier     1.0



# ----- tab bar settings ----- #

tab_bar_min_tabs            1
tab_bar_edge                bottom
tab_bar_style               fade
tab_fade 0.25 0.5 0.75 1 
tab_powerline_style         slanted
tab_title_template          {' :{}:'.format(num_windows) if num_windows > 1 else ''}{title}


# ----- cursor settings ----- #

cursor_shape block

# ----- font settings ----- #

font_size 16
font_family MonoLisa Nerd Font
bold_font        MonoLisa Nerd Font Bold
italic_font      MonoLisa Nerd Font Regular Italic
bold_italic_font MonoLisa Nerd Font Bold Italic
font_features MonoLisa Nerd Font +ss02 +liga +zero +calt

active_tab_font_style        bold
inactive_tab_font_style      normal


# ----- keyboard shortcuts ----- #


# tabs
# | keys                    | action
map cmd+1                     goto_tab 1
map cmd+2                     goto_tab 2
map cmd+3                     goto_tab 3
map cmd+4                     goto_tab 4
map cmd+5                     goto_tab 5
map cmd+6                     goto_tab 6
map cmd+7                     goto_tab 7
map cmd+8                     goto_tab 8
map cmd+9                     goto_tab 9

# splits
# | keys                    | action
map ctrl+b>z                  toggle_layout stack
map ctrl+b>-                  launch --location=hsplit --cwd=current
map ctrl+b>|                  launch --location=vsplit --cwd=current
map ctrl+b>d                  detach_window ask
map ctrl+b>h                  neighboring_window left
map ctrl+b>l                  neighboring_window right
map ctrl+b>k                  neighboring_window up
map ctrl+b>j                  neighboring_window down
map ctrl+b>ctrl+k             move_window up
map ctrl+b>ctrl+h             move_window left
map ctrl+b>ctrl+l             move_window right
map ctrl+b>ctrl+j             move_window down
map ctrl+b>ctrl+r             start_resizing_window
map ctrl+b>r                  layout_action rotate
map ctrl+b>w                  close_window

# BEGIN_KITTY_THEME
# Tokyo Night
include current-theme.conf
# END_KITTY_THEME
